<%= form_tag people_path, :method => 'get' do %>
  <p><img src="/images/lupa.png" width="20">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<h1>Listing people</h1>
<table>
  </thead>

  <tbody>
	<% if @people.empty? %>
		<p> NÃ£o existem utilizadores com esse nome </p>
	<% else %>
    <% @people.each do |person| %>
      <% if current_user.id != person.id %>
          <div style="clear:left">
            <div style="float:left">
              <%= link_to (image_tag person.avatar.url, :class =>"imgListEmpresa", :alt => "user img"), person %>
            </div>
              <h2><%= link_to person.name, person %></h2>
              <%= person.city %>   <br>
              <%= person.birthday_date %>
              <br>
          </div>
      <% end %>
    <% end %>
	<% end %>
  </tbody>
</table>


